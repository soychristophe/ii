{
  "name": "Pausa-Subtítulos",
  "identifier": "com.soychristophe.pausabeforesub",
  "version": "1.1.7",
  "homepage": "",
  "author": {
    "name": "Christophe Gomez de la Red"
  },
  "entry": "main.js",
  "minAPIVersion": "1.0",
  "description": "Pausa automáticamente antes del siguiente subtítulo. Incluye auto-repeat para reproducir subtítulos múltiples veces antes de continuar.",
  "permissions": [
    "show-osd", 
    "show-alert", 
    "file-system",
    "overlay",
    "input",
    "menu",
    "preferences"
  ],
  "hasSettings": true,
  "preferencesPage": "preferences.html",
  "preferenceDefaults": {
    "pauseMargin": 0.0,
    "checkIntervalMs": 100,
    "pollIntervalMs": 200,
    "timeOffset": 0,
    "autoRepeat": false,
    "repeatTimes": 5
  }
}