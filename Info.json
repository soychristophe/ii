{
  "name": "Pausa-Subtítulos",
  "identifier": "com.soychristophe.pausabeforesub",
  "version": "7",
  "ghRepo": "soychristophe/iina-plugin-create-by-Grok-X-auto-pause-subttitle",
  "ghVersion": 7,
  "homepage": "https://github.com/soychristophe/iina-plugin-create-by-Grok-X-auto-pause-subttitle",
  "author": {
    "name": "Christophe Gomez de la Red"
  },
  "entry": "main.js",
  "minAPIVersion": "7",
  "description": "Plugin que pausa automáticamente el video antes de que aparezca el siguiente subtítulo, permitiendo leer con calma. Incluye navegación por subtítulos con teclas A/S/D.",
  "permissions": [
    "show-osd", 
    "show-alert", 
    "file-system",
    "overlay",
    "input",
    "menu",
    "preferences"
  ],
  "hasSettings": true,
  "preferencesPage": "preferences.html",
  "preferenceDefaults": {
    "pauseMargin": 0.0,
    "checkIntervalMs": 100,
    "pollIntervalMs": 200,
    "timeOffset": 0,
    "autoRepeatEnabled": false,
    "autoRepeatTimes": 2
  }
}